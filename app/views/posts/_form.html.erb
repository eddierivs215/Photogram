<%= simple_form_for @post, html: { class:'form-horizontal', multipart: true} do |f| %>
    <div class='form-group'>
      <%= f.input :image %> 
    </div>
    <div class='form-group text-center'>
      <%= f.label :caption %>
      <%= f.text_field :caption, class: 'textbox' %>
    </div>
    <div class='form-group text-center'>
      <%= f.button :submit, class: 'btn btn-xs btn-success' %>
    </div>
  <% end %>